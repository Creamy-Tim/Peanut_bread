---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/store.css";
import "../styles/team.css";
import books from "../data/books.json";
---

<BaseLayout active="store">
    <section class="team_grid" aria-label="책 목록">
        <h1 class="page_title">책</h1>
        {books.map((m) => (
        <button
            class="book"
            type="button"
            data-img={m.img}
            data-name={m.name}
            data-writer={m.writer}
            data-pages={m.pages}
            data-introduce={m.introduce}
            data-price={m.price}
            data-link={m.link}
        >
            <img class="book_img" src={m.img} alt={m.name} loading="lazy" />
            <p class="book_name">{m.name}</p>
            <p class="book_writer">{m.writer}</p>
        </button>
        ))}
    </section>

    <!-- 책 상세 패널 -->
    <div class="modal" id="bookModal" aria-hidden="true">
        <div class="modal_overlay" data-close="true"></div>

        <div class="modal_panel" role="dialog" aria-modal="true" aria-label="책 정보">
            <button class="modal_close" type="button" aria-label="닫기" data-close="true">×</button>

            <div class="modal_body book_modal_body">
            <!-- 왼쪽: 표지 -->
            <img class="modal_img book_cover" id="bookImg" alt="" />

            <!-- 오른쪽: 정보 -->
            <div class="modal_text">
                <div class="modal_header">
                    <h2 class="modal_name" id="bookName"></h2>
                    <div class="book_meta">
                        <span class="book_writer" id="bookWriter"></span>
                        <span class="book_pages" id="bookPages"></span>
                    </div>
                </div>

                <p class="book_intro" id="bookIntroduce"></p>

                <div class="book_footer">
                    <div class="book_price" id="bookPrice"></div>
                    <a class="book_buy" id="bookLink" target="_blank" rel="noopener noreferrer">구매하러가기</a>
                </div>
            </div>
            </div>
        </div>
    </div>

    <script src="/store.js" defer></script>
</BaseLayout>